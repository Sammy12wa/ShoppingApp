<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_large_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dawcyn.africdecoration.ProductLargeImage">
    <FrameLayout
        android:background="@color/colorGlobal"
        android:id="@+id/frameHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:src="@drawable/new_product"
            android:layout_gravity="end|center_vertical"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@id/frameHeader"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProductIcon"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_gravity="bottom|center_horizontal"
          android:layout_margin="5dp"
          android:background="@drawable/button00143"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tvProductName"
              android:textSize="22sp"
              android:textStyle="bold"
              android:textColor="#fff"
              android:textAlignment="center"
              android:layout_gravity="center_horizontal|center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </FrameLayout>
    </FrameLayout>

</RelativeLayout>
