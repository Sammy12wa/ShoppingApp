<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_dashboard"
    tools:context="com.dawcyn.africdecoration.DesignerDashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tableControls"
        android:layout_above="@+id/tableNavigator"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:text="Collection empty!"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="19sp"
            tools:ignore="HardcodedText"
            android:id="@+id/tvEmpty"
            android:textStyle="bold|italic"
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/tableNavigator"
        android:background="#424"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_marginTop="0.01dp"
            android:layout_width="wrap_content"
            android:stretchColumns="*"
            android:paddingTop="2dp"
            android:background="#fff"
            android:shrinkColumns="*"
            android:layout_height="wrap_content">
            <TableRow android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:onClick="onClickTailorExplorer"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:onClick="onClickTailorExplorer"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/search_icon"
                            android:onClick="onClickTailorExplorer"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content" />

                    </FrameLayout>
                    <TextView
                        android:text="Explore"
                        tools:ignore="HardcodedText,RtlCompat"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:onClick="onClickTailorExplorer"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal|italic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:onClick="onClickUpload"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/upload"
                            android:onClick="onClickUpload"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content" />

                    </FrameLayout>
                    <TextView
                        android:text="Upload"
                        tools:ignore="HardcodedText,RtlCompat"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:onClick="onClickUpload"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal|italic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/store"
                            android:onClick="onClickTailorStore"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="0"
                            tools:ignore="HardcodedText,RtlCompat"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/holo_red_dark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:onClick="onClickTailorStore"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </FrameLayout>
                    <TextView
                        android:text="Store"
                        tools:ignore="HardcodedText,RtlCompat"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:textAlignment="center"
                        android:onClick="onClickTailorStore"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal|italic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/chat"
                            android:onClick="onClickTailorChat"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content" />

                    </FrameLayout>
                    <TextView
                        android:text="Chat"
                        tools:ignore="HardcodedText,RtlCompat"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:onClick="onClickTailorChat"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal|italic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/profile"
                            android:layout_gravity="center"
                            android:onClick="onClickTailorProfile"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="0"
                            tools:ignore="HardcodedText,RtlCompat"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/holo_red_dark"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:onClick="onClickTailorProfile"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </FrameLayout>
                    <TextView
                        android:text="Profile"
                        tools:ignore="HardcodedText,RtlCompat"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:textAlignment="center"
                        android:onClick="onClickTailorProfile"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal|italic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
