<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dawcyn.common.Chat">

    <FrameLayout
        android:background="@color/colorGlobal"
        android:id="@+id/tableControls"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:text="Chat"
            tools:ignore="HardcodedText"
            android:textSize="19sp"
            android:textColor="#eceff1"
            android:paddingTop="10dp"
            android:layout_gravity="center|center_vertical"
            android:id="@+id/tvLayoutHeader"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/back1"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:layout_height="wrap_content" />

        </FrameLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_gravity="end"
           android:layout_marginEnd="10dp"
           android:layout_height="match_parent">
           <ImageView
               android:src="@drawable/online1"
               android:layout_width="wrap_content"
               android:padding="5dp"
               android:layout_height="match_parent" />
           <TextView
               android:id="@+id/tvCartCount"
               android:text="0"
               tools:ignore="HardcodedText,RtlCompat"
               android:textSize="17sp"
               android:onClick="onClickOnlineCounter"
               android:layout_gravity="center_horizontal"
               android:textColor="@android:color/holo_orange_light"
               android:textAlignment="center"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />

       </LinearLayout>
    </FrameLayout>

    <ListView
        android:layout_below="@+id/tableControls"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/panelFooter"
        android:layout_marginBottom="5dp"
        android:id="@+id/list"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/colorGlobal"
      android:layout_margin="10dp"
      android:id="@+id/panelFooter"
      android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_margin="0.1dp"
          android:background="#E0E0E0"
          android:layout_height="match_parent">
          <EditText
              android:id="@+id/etLectureComment"
              android:layout_toLeftOf="@+id/imgSend"
              android:layout_toStartOf="@+id/imgSend"
              android:layout_marginEnd="5dp"
              android:background="#fafafa"
              android:textColor="#424242"
              android:paddingStart="10dp"
              android:layout_marginRight="5dp"
              android:layout_width="match_parent"
              android:layout_height="40dp" />
          <ImageView
              android:layout_alignParentEnd="true"
              android:src="@drawable/send32"
              android:id="@+id/imgSend"
              android:layout_marginTop="5dp"
              android:layout_marginStart="5dp"
              android:onClick="onClickSendLectureText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

      </RelativeLayout>
  </FrameLayout>

</RelativeLayout>
