<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choose_pay_method"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dawcyn.common.ChoosePayMethod">

    <FrameLayout
        android:background="@color/colorGlobal"
        android:id="@+id/tableControls"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:src="@drawable/back1"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:onClick="onClickPayMethodsBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:text="Payment Methods"
            tools:ignore="HardcodedText"
            android:textSize="19sp"
            android:textColor="#eceff1"
            android:paddingTop="10dp"
            android:layout_gravity="center|center_vertical"
            android:id="@+id/tvCategoryName"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:onClick="onClickClearCart"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/clear_cart"
                android:layout_width="wrap_content"
                android:layout_marginEnd="15dp"
                android:onClick="onClickClearCart"
                android:id="@+id/imgCartIcon"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCartCount"
                android:text="0"
                android:visibility="gone"
                tools:ignore="HardcodedText,RtlCompat"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tableControls"
        android:id="@+id/frameTotal"
        android:layout_marginTop="10dp"
        android:background="@color/colorGlobal"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="#fff"
            android:layout_marginBottom="0.01dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Amount payable "
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="0"
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:id="@+id/tvTotalCartCount"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text=" )"
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_below="@+id/frameTotal"
        android:layout_marginTop="10dp"
        android:id="@+id/frameTotalFigure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Â¢ "
                tools:ignore="HardcodedText,RtlCompat"
                android:textSize="36sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:text="799"
                tools:ignore="HardcodedText,RtlCompat"
                android:textSize="36sp"
                android:id="@+id/tvNetTotal"
                android:paddingTop="3dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/frameTotalFigure"
        android:id="@+id/frameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/tvDescription"
            android:text="Payment Gateway"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            tools:ignore="HardcodedText,RtlSymmetry"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bodyDescription"
        android:layout_below="@+id/frameDescription"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbtnCashOnDelivery"
                    android:text="Cash on Delivery"
                    android:layout_marginStart="20dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    tools:ignore="hardcodedtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbtnPayPal"
                    android:text="PayPal"
                    android:layout_marginStart="20dp"
                    tools:ignore="hardcodedtext"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbtnMoMo"
                    android:text="Mobile Money (MoMo)"
                    android:layout_marginStart="20dp"
                    tools:ignore="hardcodedtext"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rbtnBankTransfer"
                    android:text="Direct Bank Transfer"
                    android:layout_marginStart="20dp"
                    tools:ignore="hardcodedtext"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbtnCheque"
                    android:text="Cheque Only"
                    android:layout_marginStart="20dp"
                    tools:ignore="hardcodedtext"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

   <LinearLayout
       android:layout_below="@+id/bodyDescription"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:text="*"
           android:textSize="15sp"
          android:paddingStart="15dp"
           android:textAlignment="textStart"
           android:textStyle="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@android:color/holo_red_light"
           tools:ignore="HardcodedText,RtlSymmetry"/>
       <TextView
           android:text="By selecting the above gateways you agreed to the terms and conditions applied!"
           android:textSize="12sp"
           android:paddingStart="5dp"
           android:textAlignment="textStart"
           android:textStyle="bold"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#4141"
           tools:ignore="HardcodedText,RtlSymmetry"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:background="@color/colorGlobal"
        android:onClick="onClickProceedNow"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_gravity="end"
        android:layout_height="50dp">
        <FrameLayout
            android:background="#fff"
            android:layout_margin="3dp"
            android:onClick="onClickProceedNow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Order Now"
                tools:ignore="HardcodedText"
                android:textSize="20sp"
                android:onClick="onClickProceedNow"
                android:textColor="#424242"
                android:layout_gravity="center|center_vertical"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
