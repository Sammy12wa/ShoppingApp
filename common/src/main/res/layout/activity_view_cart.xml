<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dawcyn.common.ViewCart">

    <FrameLayout
        android:background="@color/colorGlobal"
        android:id="@+id/tableControls"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:src="@drawable/back1"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:onClick="onClickCartBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:text="My Cart"
            tools:ignore="HardcodedText"
            android:textSize="19sp"
            android:textColor="#eceff1"
            android:paddingTop="10dp"
            android:layout_gravity="center|center_vertical"
            android:id="@+id/tvCategoryName"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:onClick="onClickClearCart"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/clear_cart"
                android:layout_width="wrap_content"
                android:layout_marginEnd="15dp"
                android:onClick="onClickClearCart"
                android:id="@+id/imgCartIcon"
                android:padding="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCartCount"
                android:text="0"
                android:visibility="gone"
                tools:ignore="HardcodedText,RtlCompat"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tableControls"
        android:id="@+id/frameTotal"
        android:background="@color/colorGlobal"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Items( "
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="0"
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:id="@+id/tvTotalCartCount"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text=" )"
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Total: Â¢"
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="0.00"
                    tools:ignore="HardcodedText,RtlCompat"
                    android:textSize="16sp"
                    android:id="@+id/tvNetTotal"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/frameTotal"
        android:layout_above="@+id/tableBottom"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:text="Cart Empty!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/tvEmptyStatus"
        android:textColor="#4242"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:background="@color/colorGlobal"
        android:id="@+id/tableBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">


        <TableLayout
            android:layout_width="match_parent"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:onClick="onClickPlaceOrderNow"
            android:layout_height="match_parent">
            <TableRow>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginEnd="20dp"
                    android:onClick="onClickPlaceOrderNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Place Order"
                        tools:ignore="HardcodedText,RtlCompat"
                        android:textSize="19sp"
                        android:onClick="onClickPlaceOrderNow"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@android:color/holo_orange_light"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </TableRow>
        </TableLayout>


    </FrameLayout>

</RelativeLayout>
