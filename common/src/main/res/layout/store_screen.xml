<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_margin="5dp"
          android:background="#fff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:id="@+id/frameFoodIcon"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true">

              <ImageView
                  android:id="@+id/imgProductIcon"
                  android:src="@drawable/designer"
                  android:scaleType="fitXY"
                  android:padding="5dp"
                  android:layout_width="120dp"
                  android:layout_height="200dp"
                  tools:ignore="ContentDescription" />

           <RelativeLayout
               android:layout_toEndOf="@id/imgProductIcon"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TableLayout
                   android:id="@+id/topPanel"
                   android:stretchColumns="*"
                   android:shrinkColumns="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                 <TableRow>

                     <LinearLayout
                         android:background="#757575"
                         android:layout_width="wrap_content"
                         android:orientation="horizontal"
                         android:layout_gravity="end"
                         android:visibility="gone"
                         android:padding="20dp"
                         android:layout_height="wrap_content" >
                         <TextView
                             android:id="@+id/txtDiscount"
                             android:text="10"
                             android:textSize="25sp"
                             android:textStyle="bold"
                             android:paddingLeft="5dp"
                             android:textColor="@android:color/white"
                             android:textAlignment="center"
                             android:layout_gravity="center"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                         <TextView
                             android:text="%"
                             android:textSize="25sp"
                             android:textStyle="bold"
                             android:textColor="@android:color/white"
                             android:textAlignment="center"
                             android:id="@+id/tvpercent"
                             android:layout_gravity="center"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             tools:ignore="HardcodedText" />
                     </LinearLayout>
                     <FrameLayout
                         android:layout_marginBottom="12dp"
                         android:paddingLeft="5dp"
                         android:id="@+id/frameProductName"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <TextView
                             android:text="Kaba n Slit"
                             tools:ignore="HardcodedText"
                             android:layout_width="wrap_content"
                             android:layout_marginTop="10dp"
                             android:layout_height="wrap_content"
                             android:textSize="18sp"
                             android:singleLine="true"
                             android:textStyle="bold"
                             android:textColor="@android:color/holo_purple"
                             android:id="@+id/txtProductName" />
                     </FrameLayout>

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:scaleType="fitCenter"
                         android:id="@+id/imageView"
                         android:layout_marginEnd="10dp"
                         android:orientation="vertical"
                         android:layout_gravity="end|center_vertical">

                         <LinearLayout
                             android:orientation="horizontal"
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_horizontal"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:text="¢"
                                 android:textStyle="bold"
                                 android:paddingLeft="2dp"
                                 android:textColor="@android:color/holo_red_dark"
                                 android:textSize="22sp"
                                 android:layout_width="wrap_content"
                                 android:layout_height="match_parent"
                                 tools:ignore="HardcodedText" />

                             <TextView
                                 android:id="@+id/txtNewPrice"
                                 android:text="15.25"
                                 android:textAlignment="center"
                                 android:textStyle="bold"
                                 android:textColor="@android:color/holo_red_dark"
                                 android:textSize="19sp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 tools:ignore="HardcodedText" />
                         </LinearLayout>


                         <FrameLayout
                             android:id="@+id/panel_Oldprice"
                             android:layout_width="match_parent"
                             android:layout_gravity="center_horizontal"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:layout_marginTop="16dp"
                                 android:background="@android:color/black"
                                 android:layout_width="match_parent"
                                 android:layout_height="1.5dp" />
                             <LinearLayout
                                 android:orientation="horizontal"
                                 android:layout_width="wrap_content"
                                 android:layout_gravity="center_horizontal"
                                 android:layout_height="wrap_content">
                                 <TextView
                                     android:text="¢"
                                     android:textAlignment="inherit"
                                     android:textStyle="bold"
                                     android:textSize="22sp"
                                     android:paddingLeft="2dp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="match_parent"
                                     tools:ignore="HardcodedText" />
                                 <TextView
                                     android:id="@+id/txtOldPrice"
                                     android:text="15.25"
                                     android:textStyle="bold"
                                     android:textSize="19sp"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     tools:ignore="HardcodedText" />
                             </LinearLayout>
                         </FrameLayout>

                     </LinearLayout>

                 </TableRow>

               </TableLayout>

               <RelativeLayout
                   android:layout_below="@+id/topPanel"
                   android:id="@+id/middlePanel"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:src="@drawable/ratings2"
                           tools:ignore="HardcodedText"
                           android:layout_width="120dp"
                           android:layout_marginTop="5dp"
                           android:layout_height="wrap_content"
                           android:textSize="19sp"
                           android:paddingStart="10dp"
                           android:paddingEnd="5dp"
                           android:textStyle="bold"
                           android:textColor="#FFAB40"/>
                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_marginTop="8dp"
                           android:layout_marginStart="5dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <TextView
                               android:text="("
                               android:textSize="16sp"
                               android:textStyle="bold"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="#9E9E9E"
                               tools:ignore="HardcodedText"/>
                           <TextView
                               android:text="120"
                               android:textSize="16sp"
                               android:textStyle="bold"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="#9E9E9E"
                               tools:ignore="HardcodedText"/>
                           <TextView
                               android:text=")"
                               android:textSize="16sp"
                               android:textStyle="bold"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="#9E9E9E"
                               tools:ignore="HardcodedText"/>
                       </LinearLayout>
                   </LinearLayout>

               </RelativeLayout>


               <RelativeLayout
                   android:layout_below="@+id/middlePanel"
                   android:id="@+id/bottomPanel"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </RelativeLayout>

           </RelativeLayout>



          </RelativeLayout>


      </RelativeLayout>

    </RelativeLayout>
</LinearLayout>